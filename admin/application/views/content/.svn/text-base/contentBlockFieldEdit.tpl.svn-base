<fieldset>
<legend>Edit field</legend>
<form action="" method="post">
<table border="0" cellpadding="6" cellspacing="1" class="form">
<tr>
    <td>
        * Name:<br/>
        <input type="text" name="name" class="text" value="{$content.val.name}" />
    </td>
</tr>
<tr>
    <td>
        Default value:<br/>
        <input type="text" name="default" class="text" value="{$content.val.default}" />
    </td>
</tr>
<tr>
    <td>
        Type<br/>
        <select class="select" name="type">
            <option value="S" {if $content.val.type == 'S'}selected="selected"{/if}>String</option>
            <option value="A" {if $content.val.type == 'A'}selected="selected"{/if}>Array</option>
            <option value="F" {if $content.val.type == 'F'}selected="selected"{/if}>Function</option>
            <option value="E" {if $content.val.type == 'E'}selected="selected"{/if}>Extension</option>
            <option value="I" {if $content.val.type == 'I'}selected="selected"{/if}>Image</option>
            <option value="W" {if $content.val.type == 'W'}selected="selected"{/if}>Flash</option>
        </select>
    </td>
</tr>
<tr>
    <td><input type="submit" value="Edit" class="submit" name="editField" /></td>
</tr>

</table>
</form>
</fieldset>